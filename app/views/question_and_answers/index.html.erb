<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Question and answers" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Question and answers</h1>
  </div>

  <div id="question_and_answers" class="min-w-full">
    <% @question_and_answers.each do |question_and_answer| %>
      <%= render question_and_answer %>
      <p>
        <%= link_to "Show this question and answer", question_and_answer, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
