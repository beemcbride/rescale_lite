<div class="mx-auto md:w-2/3 w-full">
  
  <h1>New Question for <%= @answerable.name %></h1>

  <%= form_with(model: [@answerable, @question_and_answer], local: true) do |form| %>
    <div class="my-5">
      <%= form.label :question %>
      <%= form.text_field :question, id: :question_and_answer_question, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.label :answer %>
      <%= form.text_field :answer, :readonly => true, id: :question_and_answer_answer, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= link_to "Back", ingredient_path(@answerable), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

</div>
